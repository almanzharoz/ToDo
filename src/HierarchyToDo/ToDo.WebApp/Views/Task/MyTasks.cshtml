@model System.Collections.Generic.IReadOnlyCollection<ToDo.Dal.Projections.Task>
@{
	ViewBag.Title = "Мои задачи";
}
<table class="table table-hover">
	<thead>
		<tr>
			<th>User</th>
			<th>Date</th>
			<th>Name</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var t in Model)
		{
			<tr>
				<td>@t.User.Nick</td>
				<td>@t.Created.ToString("g")</td>
				<td><a href="@Url.Action("GetTask", new {t.Id})" class="modal-link">@t.Name</a></td>
				<td></td>
				<td></td>
			</tr>
		}
	</tbody>
</table>